<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        style="@style/SelectableItemBackground"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_dp_16">

    <ImageView
            android:id="@+id/iv_pic"
            android:background="@drawable/ic_news_prepare"
            android:layout_width="100dp"
            android:layout_height="65dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_dp_10"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/sdk_color_104"
                android:textSize="@dimen/text_size_sp_16"
                tools:text="title" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_dp_4"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/sdk_color_008"
                    android:textSize="@dimen/text_size_sp_14"
                    tools:text="content" />

            <TextView
                    android:id="@+id/tv_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_date"
                    android:layout_toRightOf="@id/iv_pic"
                    android:gravity="right"
                    android:textColor="@color/sdk_color_008"
                    android:textSize="@dimen/text_size_sp_14"
                    tools:text="content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>