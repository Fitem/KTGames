<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/sdk_color_001</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <style name="TransparentTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="TransparentTheme.GrayBlack" parent="TransparentTheme">
        <item name="colorPrimaryDark">@color/gray_black_primary_dark</item>
        <item name="colorPrimary">@color/gray_black_primary</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:background">@drawable/sdk_list_item_selector</item>
    </style>
</resources>
